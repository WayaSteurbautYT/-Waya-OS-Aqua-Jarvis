; VS Code Settings for Waya-OS: Aqua Jarvis Edition
; Paste contents into %APPDATA%\Code\User\settings.json

{
    // Editor appearance
    "editor.fontSize": 14,
    "editor.fontFamily": "Consolas, 'Courier New', monospace",
    "editor.lineHeight": 24,
    "editor.letterSpacing": 0.5,
    "editor.renderWhitespace": "trailing",
    
    // Theme (Sweet Apocalypse)
    "workbench.colorTheme": "One Dark Pro",
    "workbench.iconTheme": "vscode-icons",
    
    // Color customization
    "workbench.colorCustomizations": {
        "editor.background": "#1a1a2e",
        "editor.foreground": "#ffffff",
        "editorCursor.foreground": "#7FFFD4",
        "editor.lineNumbersMinChars": 4,
        "editorLineNumber.foreground": "#3A0CA3",
        "editor.selectionBackground": "#3A0CA3",
        "editor.findMatchBackground": "#FFD700",
        "editor.findMatchHighlightBackground": "#FF9900",
        "editor.wordHighlightBackground": "#7FFFD4",
        "editorBracketMatch.background": "#3A0CA3",
        "statusBar.background": "#3A0CA3",
        "statusBar.foreground": "#7FFFD4",
        "activityBar.background": "#0a0a0f",
        "activityBar.foreground": "#7FFFD4",
        "sideBar.background": "#1a1a2e",
        "sideBar.foreground": "#ffffff",
        "titleBar.activeBackground": "#3A0CA3",
        "titleBar.activeForeground": "#7FFFD4",
        "terminal.background": "#000000",
        "terminal.foreground": "#7FFFD4",
        "terminal.ansiBlue": "#0000FF",
        "terminal.ansiCyan": "#00FFFF",
        "terminal.ansiGreen": "#00FF00",
        "terminal.ansiMagenta": "#9900FF",
        "terminal.ansiRed": "#FF4C4C",
        "terminal.ansiYellow": "#FFD700"
    },
    
    // Token color customizations
    "editor.tokenColorCustomizations": {
        "comments": "#6A737D",
        "strings": "#85E89D",
        "numbers": "#FFD700",
        "keywords": "#FF4C4C",
        "functions": "#7FFFD4",
        "variables": "#FFFFFF"
    },
    
    // Git
    "git.confirmSync": false,
    "git.autofetch": true,
    
    // Python (if using Python extension)
    "python.defaultInterpreterPath": "${workspaceFolder}/venv/bin/python",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.formatting.provider": "black",
    
    // Extensions
    "extensions.autoUpdate": true,
    "extensions.ignoreRecommendations": false,
    
    // AI Features
    "github.copilot.enable": {
        "*": true,
        "plaintext": true,
        "markdown": true,
        "python": true,
        "javascript": true
    },
    
    // Editor features
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    
    // Files
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/node_modules": true,
        "**/.venv": true
    },
    
    // Zen mode
    "zenMode.centerLayout": true,
    "zenMode.fullScreen": false,
    "zenMode.restore": true,
    
    // Terminal
    "terminal.integrated.shell.windows": "powershell.exe",
    "terminal.integrated.shellArgs.windows": ["-NoProfile", "-ExecutionPolicy", "Bypass"],
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorBlinking": true,
    
    // Workbench
    "workbench.startupEditor": "welcomePageInEmptyWorkbench",
    "workbench.activityBar.visible": true,
    "workbench.sideBar.location": "left",
    "workbench.statusBar.visible": true
}
